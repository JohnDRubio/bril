@main(input: int) {
    x: int = const 0;
    x1: int = const 0;
    x2: int = const 0;
    b: bool = lt input x;
    br b .fall_through .recover;
    .fall_through:
    x: int = const 12;
    print x;        # bad idea to do side-effecting operations within a speculative state
    ret;

.recover:
    y: int = const 42;
    print y;
    print x;        # x should be rolled back to 5
}